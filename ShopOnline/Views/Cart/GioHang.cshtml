@model List<ShopOnline.Models.CartItem>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@section jsFooter{

    <script src="/Content/js/Controller/CartController.js"></script>
}
<div class="container">
    <div id="giohang">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>

                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>

                            <td>@item.sanpham.TenSP</td>
                            <td><img width="100" src="~/images/SanPham/@item.sanpham.HinhAnh" /></td>
                            <td><input type="text" class="txtQuantity" value="@item.soluong" data-id="@item.sanpham.MaSP"/></td>
                            <td>@item.sanpham.DonGia.GetValueOrDefault(0).ToString("N0")</td>
                            <td>
                                @((item.sanpham.DonGia.GetValueOrDefault(0) * item.soluong).ToString("N0")) đ
                            </td>
                            <td> <a href="#" class="btn-delete" data-id="@item.sanpham.MaSP"><i class="far fa-trash-alt"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <button id="btnContinue" class="btn btn-secondary">Tiếp tục mua hàng</button>
            <button id="btnUpdate" class="btn btn-secondary">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll" class="btn btn-secondary">Xóa giỏ hàng</button>
            <button id="btnPayment" class="btn btn-secondary">Thanh toán</button>
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm trong giỏ hàng </span>
        }
    </div>
</div>