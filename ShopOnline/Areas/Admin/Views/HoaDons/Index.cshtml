@model IEnumerable<ShopOnline.Areas.Admin.Models.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var grid = new WebGrid(Model, canPage: true, rowsPerPage: 10);
}
<div class="row">
    <div class="col-md-2">
        @{
            Html.RenderPartial("Submenu");
        }
    </div>

    <div class="col-md-10">
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("MaHoaDon","Mã hóa đơn"), //the model fields to display
        grid.Column("TaiKhoan.HoTen","Tên khách hàng"  ),
        grid.Column("DiaChiGiaoHang","Địa chỉ giao hàng"),
        grid.Column("TinhTrang","Tình trạng"),
        //grid.Column(format: (item) => Html.ActionLink("Cập nhật", "Edit", "SanPhams",new { id = item.MaSP },"s")),
        //grid.Column(format: (item) => Html.ActionLink("Xem chi tiết", "Details","SanPhams", new { id = item.MaSP },"s")),
        //grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","SanPhams", new { id = item.MaSP },"s")),
        grid.Column("Chức năng", format:
        @<text>
            <a href="@Url.Action("Edit",new { id = item.MaHoaDon})"><abbr title="Cập nhật dữ liệu"><i class="fa fa-twitter"></i></abbr></a>
            <a href="@Url.Action("Details",new { id = item.MaHoaDon})" class="edit-btn"><abbr title="Xem chi tiết"><i class="fa fa-camera-retro"></i></abbr></a>
            <a href="@Url.Action("Delete",new { id = item.MaHoaDon})" class="edit-btn"><abbr title="Xóa dữ liệu"><i class="fab fa-airbnb"></i></abbr></a>
        </text>),
         }
         )
    </div>

</div>